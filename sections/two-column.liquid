<div class="two-column-section">
  <div class="container">
    <div class="row">
      <div class="column left">
        <!-- Left column content -->
        {% if section.settings.left_content != blank %}
          {{ section.settings.left_content }}
        {% endif %}
      </div>
      <div class="column right">
        <!-- Right column content -->
        {% if section.settings.right_content != blank %}
          {{ section.settings.right_content }}
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .two-column-section .container {
    display: flex;
    flex-wrap: wrap;
  }

  .two-column-section .column {
    padding: 10px;
  }

  .two-column-section .left {
    flex: 1 1 33%;
  }

  .two-column-section .right {
    flex: 1 1 66%;
  }

  @media (max-width: 768px) {
    .two-column-section .left,
    .two-column-section .right {
      flex: 1 1 100%;
    }
  }
</style>

{% schema %}
{
  "name": "Two Column",
  "settings": [
    {
      "type": "textarea",
      "id": "left_content",
      "label": "Left Column Content",
      "default": "<p>Left column content goes here.</p>"
    },
    {
      "type": "textarea",
      "id": "right_content",
      "label": "Right Column Content",
      "default": "<p>Right column content goes here.</p>"
    }
  ]
}
{% endschema %}