{%- style -%}
  .two-column .two-column__inner {
    display: flex;
    flex-wrap: wrap;
  }

  .two-column .column {
    padding: 10px;
  }

  .two-column .left {
    flex: 1 1 33%;
  }

  .two-column .right {
    flex: 1 1 66%;
  }

  @media (max-width: 768px) {
    .two-column .left,
    .two-column .right {
      flex: 1 1 100%;
    }
  }
{%- endstyle -%}

<div class="two-column">
  <div class="two-column__inner page-width">
    <div class="row">
      <div class="column left">
        <h2>{{ section.settings.left_content }}</h2>
      </div>
      <div class="column right">
        <p>{{ section.settings.right_content }}</p>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Two Column",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "textarea",
      "id": "left_content",
      "label": "Left Column Content",
      "default": "Left column content goes here."
    },
    {
      "type": "textarea",
      "id": "right_content",
      "label": "Right Column Content",
      "default": "Right column content goes here."
    }
  ],
  "presets": [
    {
      "name": "Two Column"
    }
  ]
}
{% endschema %}
