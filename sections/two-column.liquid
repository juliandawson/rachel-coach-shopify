{%- style -%}
  .two-columns-section .container {
    display: flex;
    flex-wrap: wrap;
  }

  .two-columns-section .column {
    padding: 10px;
  }

  .two-columns-section .left {
    flex: 1 1 33%;
  }

  .two-columns-section .right {
    flex: 1 1 66%;
  }

  @media (max-width: 768px) {
    .two-columns-section .left,
    .two-columns-section .right {
      flex: 1 1 100%;
    }
  }
{%- endstyle -%}

<div class="two-columns-section">
  <div class="container">
    <div class="row">
      <div class="column left">
        <!-- Left column content -->
        {{ section.settings.left_content }}
      </div>
      <div class="column right">
        <!-- Right column content -->
        {{ section.settings.right_content }}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Two Columns",
  "settings": [
    {
      "type": "textarea",
      "id": "left_content",
      "label": "Left Column Content",
      "default": "<p>Left column content goes here.</p>"
    },
    {
      "type": "textarea",
      "id": "right_content",
      "label": "Right Column Content",
      "default": "<p>Right column content goes here.</p>"
    }
  ],
  "presets": [
    {
      "name": "Two Columns"
    }
  ]
}
{% endschema %}
