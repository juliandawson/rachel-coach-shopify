{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    }

    .section-{{ section.id }} .banner-image {
    width: 100%;
    max-height: 400px;
    overflow: hidden;
    }

    .section-{{ section.id }} .banner-image img {
    width: 100%;
    height: auto;
    }

    .section-{{ section.id }} .banner-content {
    text-align: center;
    padding: 20px;
    background-color: {{ section.settings.banner_background_color }};
    color: {{ section.settings.banner_text_color }};
    }

    .section-{{ section.id }} .banner-title {
    font-size: {{ section.settings.banner_title_size }};
    font-weight: bold;
    }

    .section-{{ section.id }} .banner-subtitle {
    font-size: {{ section.settings.banner_subtitle_size }};
    margin-top: 10px;
    }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
    <div class="page-width page-width--narrow section-{{ section.id }}-padding">
        <div class="banner-image">
            <img src="{{ section.settings.banner_image | img_url: 'master' }}" alt="{{ section.settings.banner_alt_text }}">
        </div>
        <div class="banner-content">
            <h2 class="banner-title{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                {{ section.settings.banner_title | escape }}
            </h2>
            <p class="banner-subtitle{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                {{ section.settings.banner_subtitle }}
            </p>
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Page Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "banner_alt_text",
      "label": "Alt Text",
      "default": "Banner image"
    },
    {
      "type": "text",
      "id": "banner_title",
      "label": "Banner Title",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "banner_subtitle",
      "label": "Banner Subtitle",
      "default": "We're glad you're here."
    },
    {
      "type": "select",
      "id": "banner_title_size",
      "label": "Banner Title Size",
      "default": "2.5em",
      "options": [
        {
          "value": "2em",
          "label": "Small"
        },
        {
          "value": "2.5em",
          "label": "Medium"
        },
        {
          "value": "3em",
          "label": "Large"
        }
      ]
    },
    {
      "type": "select",
      "id": "banner_subtitle_size",
      "label": "Banner Subtitle Size",
      "default": "1.2em",
      "options": [
        {
          "value": "1em",
          "label": "Small"
        },
        {
          "value": "1.2em",
          "label": "Medium"
        },
        {
          "value": "1.5em",
          "label": "Large"
        }
      ]
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "color",
      "id": "banner_background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "banner_text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Default"
    }
  ]
}
{% endschema %}
